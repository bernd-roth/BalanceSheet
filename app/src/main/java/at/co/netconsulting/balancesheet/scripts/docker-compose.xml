version: '3.8'
    services:
    web:
    build: .
    ports:
    - "8080:8080"
    environment:
    - DATABASE_URL=postgresql://postgres:password@db:5432/incomeexpense
    depends_on:
    db:
    condition: service_healthy
    restart: unless-stopped

    db:
    image: arm64v8/postgres:16
    environment:
    - POSTGRES_PASSWORD=password
    - POSTGRES_DB=incomeexpense
    ports:
    - "5432:5432"
    volumes:
    - postgres_data:/var/lib/postgresql/data
    - ./init.sql:/docker-entrypoint-initdb.d/init.sql
    healthcheck:
    test: ["CMD-SHELL", "pg_isready -U postgres"]
    interval: 5s
    timeout: 5s
    retries: 5
    restart: unless-stopped

    volumes:
    postgres_data:
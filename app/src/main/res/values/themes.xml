<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BalanceSheet" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen Theme -->
    <style name="Theme.BalanceSheet.Splash" parent="Theme.BalanceSheet">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <!-- Android 12+ Splash Screen API -->
        <item name="android:windowSplashScreenBackground">@color/splash_background_color</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="android:windowSplashScreenAnimationDuration">2000</item>
    </style>

</resources>